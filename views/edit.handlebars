<div class="container mt-5">
  <div class="card" style="width: 40rem">
    <div class="card-body">
      <div class="row">
        <h5 class="card-title col-4">請修改你的支出</h5>
        <p class="col-2 text-danger">*必填欄位</p>
      </div>
      <hr>
      <form action="/records/{{record._id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">名稱*:</label>
          <input type="text" class="form-control" name="name" value="{{record.name}}">
        </div>
        <div class="form-group">
          <label for="date">日期*:</label>
          <input type="date" class="form-control" value="{{record.date}}" name="date">
        </div>
        <div class="form-group">
          <label for="merchant">商家:</label>
          <input type="merchant" class="form-control" value="{{record.merchant}}" name="merchant">
        </div>
        <div class="form-group">
          <label for="category">類別*:</label>
          <select class="form-control col-4" class="form-control" name="category">
            <option {{#ifEquals record.category 'household'}}selected{{/ifEquals}}value="household">家居物業</option>
            <option {{#ifEquals record.category 'transportation'}}selected{{/ifEquals}} value="transportation">交通出行
            </option>
            <option {{#ifEquals record.category 'entertainment'}}selected{{/ifEquals}} value="entertainment">休閒娛樂
            </option>
            <option {{#ifEquals record.category 'food'}}selected{{/ifEquals}} value="food">餐飲食品</option>
            <option {{#ifEquals record.category 'others'}}selected{{/ifEquals}} value="others">其他</option>
          </select>
        </div>
        <div class="form-group">
          <label for="amount">金額*:</label>
          <input type="number" class="form-control" min="0.01" step="0.01" value="{{record.amount}}" name="amount">
        </div>
        <div class="button-container" align="right">
          <button type="submit" class="btn btn-primary mt-3">Save</button>
          <a class="btn btn-primary mt-3" href="/">Back</a>
        </div>
      </form>
    </div>
  </div>
</div>